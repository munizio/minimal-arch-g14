[module/mic]
type = custom/script
interval = 10
label = "[ %output% ]"
exec = TEMP=$(pacmd list-sources | grep -e 'index:' -e 'muted:' | tail -1); if [[ $TEMP =~ "yes" ]]; then echo "󰍭"; elif [[ $TEMP =~ "no" ]]; then echo "󰍬"; fi

[module/currenttime]
type = custom/script
interval = 0.5
label-foreground = ${colors.fc}
label =  %output%
label-padding=1
exec = date +%a,\ %b\ %d\ %k:%M:%S

[module/GPU]
type = custom/script
interval = 10
label = "[ 󰔂 %output% ]"
exec = TEMP=$(lspci | grep VGA | wc -l); if [ $TEMP -eq 1 ]; then echo "iGPU"; elif [ $TEMP -eq 2 ]; then echo "dGPU/iGPU"; fi

[module/policy]
type = custom/script
interval = 10
label = "[ 󰡵 %output% "
exec = TEMP=$(cat /sys/devices/platform/asus-nb-wmi/throttle_thermal_policy); if [ $TEMP -eq 0 ]; then echo "Balanced"; elif [ $TEMP -eq 1 ]; then echo "NOS"; elif [ $TEMP -eq 2 ]; then echo "Quiet";fi

[module/fanspeed]
type = custom/script
interval = 10
label =  "󰈐 %output% RPM "
;label =  "󰫕 %output% RPM "
;label =  "󱂠 %output% RPM "
exec = cat /sys/devices/platform/asus-nb-wmi/hwmon/hwmon6/fan1_input

[module/cputemp]
type = custom/script
interval = 10
label =  "󰔏 %output%°C ]"
exec = TEMP=$(cat /sys/devices/virtual/thermal/thermal_zone0/temp); expr $TEMP / 1000

[module/spacer]
type = custom/script
interval = 1000
exec = echo " "
format-padding = 2

[module/powermenu]
type = custom/menu

format = <label-toggle><menu>
